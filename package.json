{
    "name": "Trello-clone-API",
    "version": "1.0.0",
    "description": "Build API for trello clone app",
    "main": "src/server.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "eslint": "eslint src",
        "remove-build": "rmdir /s /q build",
        "create-build": "mkdir build",
        "clean": "npm run remove-build && npm run create-build",
        "build-babel": "babel ./src -d ./build/src",
        "build": "npm run clean && npm run build-babel",
        "production": "npm run build && node ./build/src/server.js",
        "dev": "nodemon --exec ./node_modules/.bin/babel-node ./src/server.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/DucTran2310/Trello-clone-API.git"
    },
    "keywords": [],
    "author": "DucTran",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/DucTran2310/Trello-clone-API/issues"
    },
    "homepage": "https://github.com/DucTran2310/Trello-clone-API#readme",
    "dependencies": {
        "@babel/runtime": "^7.16.5",
        "express": "^4.17.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.16.5",
        "@babel/node": "^7.16.5",
        "@babel/plugin-transform-runtime": "^7.16.5",
        "@babel/preset-env": "^7.16.5",
        "babel-eslint": "^10.1.0",
        "babel-plugin-module-resolver": "^4.1.0",
        "eslint": "^8.4.1",
        "nodemon": "^2.0.15"
    }
}
